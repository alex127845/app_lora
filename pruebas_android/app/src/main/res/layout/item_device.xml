<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/device_item_background"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants">
    <!-- â¬†ï¸ ESTO PREVIENE que los hijos bloqueen el click -->

    <!-- Icono del dispositivo -->
    <ImageView
        android:id="@+id/iv_device_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_bluetooth_device"
        android:contentDescription="Icono dispositivo"
        android:padding="8dp"
        android:background="@drawable/icon_background"
        android:backgroundTint="#E3F2FD"/>

    <!-- InformaciÃ³n del dispositivo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Nombre del dispositivo -->
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dispositivo Bluetooth"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- DirecciÃ³n MAC -->
        <TextView
            android:id="@+id/tv_device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00:00:00:00"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"
            android:fontFamily="monospace"/>

        <!-- Tipo de dispositivo (TX/RX) -->
        <TextView
            android:id="@+id/tv_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“¡ Transmisor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FF6F00"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

    </LinearLayout>

    <!-- Indicador de que es seleccionable -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_send"
        android:contentDescription="Conectar"
        android:tint="#9E9E9E"
        android:alpha="0.5"/>

</LinearLayout>